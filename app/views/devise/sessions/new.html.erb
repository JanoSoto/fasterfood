<%= page_title "Iniciar Sesión" %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  	<div class="form-group" class="field">
    	<%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
	</div>
  	<div class="form-group" class="field">
	    <%= f.text_field :password, :class => "form-control", :placeholder => "Contraseña" %>
	</div>
	<div class="form-group" class="field">
    	<%= f.input :remember_me, :class => "form-control", :label => "Recuérdame", as: :boolean if devise_mapping.rememberable? %>
	</div>
	<div class="form-actions">
		<%= f.button :submit, "Iniciar sesión", :class => "btn bg-olive btn-block" %>
	</div>
<% end %>
