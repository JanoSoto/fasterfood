<%= simple_form_for(@merma_lote) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cantidad %>
    <%= f.input :fecha_merma %>
    <%= f.input :comentario %>
    <%= f.association :lote, label_method: :numero_lote, value_method: :id, prompt: "Eliga uno..." %>
  </div> 

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
