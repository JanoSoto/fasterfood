<%= simple_form_for(@merma_insumo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cantidad_merma %>
    <%= f.input :fecha_merma %>
    <%= f.input :comentario_merma %>
    <%= f.association :insumo, label_method: :nombre_insumo, value_method: :id, prompt: "Eliga uno..." %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
