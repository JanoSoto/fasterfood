<%= page_title "Mermas - Ingredientes" %>
<a href="<%= url_for new_merma_ingrediente_path %>" class="pull-right"><button type="button" class="btn btn-success">AÃ±adir Nueva Merma de Ingrediente</button></a>
<div class="row">
    <div class="col-xs-12">
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Fecha merma</th>
      <th>Comentario merma</th>
      <th>Ingrediente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merma_ingredientes.each do |merma_ingrediente| %>
      <tr>
        <td><%= merma_ingrediente.cantidad %></td>
        <td><%= merma_ingrediente.fecha_merma %></td>
        <td><%= merma_ingrediente.comentario_merma %></td>
        <td><%= merma_ingrediente.ingrediente.nombre.capitalize %></td>
        <td><%= link_to 'Editar', edit_merma_ingrediente_path(merma_ingrediente) %></td>
        <td><%= link_to 'Eliminar', merma_ingrediente, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
        </div><!-- /.box-body -->
    </div>
</div>
