<div class="box-header">
  <h3 class="box-title">Ingredientes</h3>
</div>
<table class="table table-hover" id="tabla_basicos">
    <tr>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Stock Actual</th>
        <th>Stock Cr√≠tico</th>
        <th>Stock Ideal</th>
    </tr>
    <% if @basico.ingredientes.any? %>
        <% i = 0 %>
        <% @basico.ingredientes.each do | ingrediente | %>
            <tr>
                <td><%= ingrediente.nombre %></td>
                <td><%= @basico.detalles_basicos[i].cantidad %></td>
                <td><%= ingrediente.categoria %></td>
                <td><%= ingrediente.stock_actual %></td>
                <td><%= ingrediente.stock_critico %></td>
                <td><%= ingrediente.stock_ideal %></td>
            </tr>
            <% i = i + 1 %>
        <% end %>
    <% end %>
</table>
