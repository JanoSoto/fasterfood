<a href="<%= edit_basico_path(@basico) %>" class="pull-right"><button type="button" class="btn btn-success">Modificar</button></a>

<p>
  <strong>Precio:</strong>
  <%= @basico.precio %>
</p>

<p>
  <strong>Nombre producto:</strong>
  <%= @basico.nombre_producto %>
</p>

<p>
  <strong>En venta:</strong>
  <span class="label <%= if @basico.en_venta then "label-success" else "label-warning" end %>">
      <%= if @basico.en_venta then "Si&nbsp;".html_safe else "No" end %>
  </span>
</p>

