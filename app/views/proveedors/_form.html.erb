<%= page_title "Agregar Proveedor" %>
<%= form_for(@proveedor, :html => {:class => "form-horizontal"}) do |f| %>
    <% elemento = @proveedor %>
    <% if elemento.errors.any? %>
      <div class="alert alert-warning alert-dismissable">
        <i class="fa fa-warning"></i>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <!-- <i class="fa fa-warning text-yellow"> -->
        <b>Hay errores con los datos que ingreso:</b>
        <ul>
        <% elemento.errors.each do |key, message| %>
          <li>
            <% if key != :general %>
              <%= key.capitalize.to_s.gsub( '_', ' ' ) %> 
            <% end %>
            <%= message %>
          </li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-inputs">
    <div class="form-group" class="field">
        <label for="input_nombre_producto" class="col-sm-2 control-label">Rut</label>
        <div class="col-sm-2">
            <%= f.text_field :rut_proveedor %>
        </div>
    </div>
    <div class="form-group" class="field">
        <label for="input_precio" class="col-sm-2 control-label">Nombre</label>
        <div class="col-sm-2">
            <%= f.text_field :nombre_proveedor %>
        </div>
    </div>
    <div class="form-group" class="field">
        <label for="input_precio" class="col-sm-2 control-label">Telefono</label>
        <div class="col-sm-2">
            <%= f.text_field :telefono_proveedor %>
        </div>
    </div>
    <div class="form-group" class="field">
        <label for="input_precio" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-2">
            <%= f.text_field :email_proveedor %>
        </div>
    </div>
  </div>

  <div class="form-group" class="field">
      <div class="col-sm-offset-2">
          <%= boton_guardar_cancelar((f.submit "Guardar", :class => "btn btn-success"), proveedors_path) %>
      </div>
  </div>
<% end %>