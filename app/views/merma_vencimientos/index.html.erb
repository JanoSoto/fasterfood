<h1>Listado de merma de vencimiento de lotes</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Fecha merma</th>
      <th>Lote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merma_vencimientos.each do |merma_vencimiento| %>
      <tr>
        <td><%= merma_vencimiento.cantidad %></td>
        <td><%= merma_vencimiento.fecha_merma %></td>
        <td><%= merma_vencimiento.lote %></td>
        <td><%= link_to 'Editar', edit_merma_vencimiento_path(merma_vencimiento) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ingresar nueva merma', new_merma_vencimiento_path %>
